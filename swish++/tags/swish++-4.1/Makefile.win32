E_LINK=		$(CCLINK)
E_OBJS=		conf_var$(CCOEXT) \
		conf_bool$(CCOEXT) \
		conf_int$(CCOEXT) \
		conf_set$(CCOEXT) \
		conf_string$(CCOEXT) \
