##
# Build rules
##

all:: $(BUILD_TARGET)

extract: $(E_OBJS)
	$(CC) $(CFLAGS) $(LPATHS) -o $@ $(E_OBJS) $(E_LINK)

index: $(I_OBJS)
	$(CC) $(CFLAGS) $(LPATHS) -o $@ $(I_OBJS) $(I_LINK)

search: $(S_OBJS)
	$(CC) $(CFLAGS) $(LPATHS) -o $@ $(S_OBJS) $(S_LINK)

bcd$(CCOEXT): \
	fake_ansi$(CCHEXT) \
		$(PLATFORM_H)

conf_bool$(CCOEXT): \
	conf_bool$(CCHEXT) \
		conf_var$(CCHEXT) \
			fake_ansi$(CCHEXT) \
				$(PLATFORM_H) \
			less$(CCHEXT) \
	exit_codes$(CCHEXT) \
	util$(CCHEXT)


conf_int$(CCOEXT): \
	conf_int$(CCHEXT) \
		conf_var$(CCHEXT) \
			fake_ansi$(CCHEXT) \
				$(PLATFORM_H) \
			less$(CCHEXT) \
	exit_codes$(CCHEXT) \
	util$(CCHEXT)

conf_set$(CCOEXT): \
	conf_set$(CCHEXT) \
		conf_var$(CCHEXT) \
			fake_ansi$(CCHEXT) \
				$(PLATFORM_H) \
