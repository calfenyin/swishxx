	word_util$(CCHEXT)

stop_words$(CCOEXT): \
	config$(CCHEXT) \
	exit_codes$(CCHEXT) \
	file_vector$(CCHEXT) \
	stop_words$(CCHEXT) \
		my_set$(CCHEXT) \
			fake_ansi$(CCHEXT) \
				$(PLATFORM_H) \
