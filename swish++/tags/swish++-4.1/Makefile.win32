			less$(CCHEXT)

search$(CCOEXT): \
	bcd$(CCHEXT) \
	config$(CCHEXT) \
	exit_codes$(CCHEXT) \
	file_index$(CCHEXT) \
		file_vector$(CCHEXT) \
	file_list$(CCHEXT) \
	file_vector$(CCHEXT) \
