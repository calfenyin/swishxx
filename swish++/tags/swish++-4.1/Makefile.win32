			less$(CCHEXT)

index$(CCOEXT): \
	bcd$(CCHEXT) \
	config$(CCHEXT) \
	directory$(CCHEXT) \
		FollowLinks$(CCHEXT) \
			conf_bool$(CCHEXT) \
				conf_var$(CCHEXT) \
					fake_ansi$(CCHEXT) \
					less$(CCHEXT) \
	do_file$(CCCEXT) \
	elements$(CCHEXT) \
