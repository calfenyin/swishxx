use File::Basename;
use Getopt::Std;

$me = basename( $0 );

getopts( 'p:' ) or die "usage: $me -p prefix\n";
die "$me: -p required\n" unless $opt_p;

while ( <> ) {
	if ( /^From / ) {
		close( FILE );
		open( FILE, ">$opt_p." . sprintf( "%05d", ++$i ) ) ||
			die "$me: can not create file\n";
	}
	print FILE;
}
close( FILE );
